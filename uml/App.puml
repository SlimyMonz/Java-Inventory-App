@startuml
'https://plantuml.com/class-diagram

class App {

    -start()
    -main()
}

class Controller {

    +clickAddList()
    +clickDeleteList()
    +clickShowCompleted()
    +clickHideCompleted()
    +clickPlus()
    +clickMinus()
    +menuLoadFile()
    +menuLoadList()
    +menuSaveFile()
    +menuSaveList()
    +menuQuit()

}

class ManageFile {

    -String fileName
    -Path filePath

    +ManageFile()

    +setFileName()
    +getFileName()

    +setFilePath()
    +getFilePath()

    +loadFile()
    +saveFile()

    +loadList()
    +saveList()

}

class TodoListArray {
    -Treemap<String, TodoList>

    +TodoListArray()

    +addTodoList()
    +delTodoList()
}

class TodoList {
    -String nameOfList
    -ArrayList<Todo> todoList

    +TodoList()

    +setListName()
    +getListName()

    +addTodo()
    +delTodo()
}

class Todo {

    -Date dueDate
    -String todoText
    -Boolean completed

    +Todo()

    +setTodoText()
    +getTodoText()

    +setDueDate()
    +getDueDate()

    +setCompleted(Boolean)
    +getCompleted()

}


JavaFX.GUI = App
JavaFX.GUI = Controller

App <--|> ManageFile
ManageFile --|> TodoListArray
ManageFile --|> TodoList
Todo <|-> TodoList
TodoList <|-> TodoListArray

ManageFile = Controller
TodoList ==  Controller
TodoListArray = Controller




@enduml