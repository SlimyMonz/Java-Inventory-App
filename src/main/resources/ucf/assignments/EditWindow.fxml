<AnchorPane maxHeight="35.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ucf.assignments.EditController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
   </padding>
   <HBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0"
         AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <TextField fx:id="editValueField" HBox.hgrow="ALWAYS" prefWidth="150.0" promptText="Value"/>
      <TextField fx:id="editSerialField" HBox.hgrow="NEVER" prefWidth="100.0" promptText="Serial"/>
      <TextField fx:id="editNameField" HBox.hgrow="ALWAYS" prefWidth="250.0" promptText="Name"/>
      <Button onAction="#clickConfirmEdit" text="Confirm" prefWidth="100.0"/>
   </HBox>
</AnchorPane>

